{
  "manifest_version": 2,
  "name": "Fear & Greed Index Tracker",
  "version": "1.0",
  "description": "Track CNN's Fear & Greed Index daily",
  "permissions": [
    "https://production.dataviz.cnn.io/*",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}